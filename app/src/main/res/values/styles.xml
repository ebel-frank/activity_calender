<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/about_image</item>
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!--Set the theme of the activity that directly follows your splash screen-->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Duration">
        <item name="android:gravity">top</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">35dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">@id/time_guideline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">35dp</item>
    </style>

    <style name="BeatBoxButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">.5dp</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:background">@color/lineColor</item>
        <item name="layout_constraintStart_toEndOf">@id/time_guideline</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/ash</item>
        <item name="android:colorControlActivated">#FFDF00</item>
    </style>

</resources>
